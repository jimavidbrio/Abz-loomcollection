<div class="cart-item product-{{ item.product.handle }}"{% if animate %} data-cc-animate{% endif %} >
  <div class="cart-item__column cart-item__image">
    <a href="{{ item.url }}">
      {% render 'responsive-image', image: item.image, max_height: 100 %}
    </a>
  </div>

  <div class="cart-item__not-image">
    <div class="cart-item__column cart-item__description">
      <div class="lightly-spaced-row">
        <div class="cart-item__title">
          <a class="inh-col" href="{{ item.url }}">{{ item.product.title | escape_once }}</a>
        </div>
        <div class="small-text">
          {%- if item.product.variants.size > 1 -%}
            {%- for option in item.product.options -%}
              <div class="cart-item__variant">
                <span class="cart-item__variant-label">{{ option | escape_once }}:</span>
                <span class="cart-item__variant-value">{{ item.variant.options[forloop.index0] | escape_once }}</span>
              </div>
            {%- endfor -%}
          {%- endif -%}

          {%- for p in item.properties -%}
            {% unless p.last == blank or p.first contains '_randomNumber' or p.first contains '_main' %}
              <div class="line-item-property">
                <span class="line-item-property__label">{{ p.first | escape_once }}:</span>
                <span class="line-item-property__value">
                  {%- if p.last contains '/uploads/' -%}
                    <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                  {%- else -%}
                    {{- p.last | escape_once -}}
                  {%- endif -%}
                </span>
              </div>
            {% endunless %}
          {%- endfor -%}

          {% if item.selling_plan_allocation %}
            <div class="subscription-description">{{ item.selling_plan_allocation.selling_plan.name | escape_once }}</div>
          {% endif %}

          {% if section.settings.show_backorder_text == true %}
            {% render 'backorder', product: item.product, variant: item.variant %}
          {% endif %}

          {% if settings.prod_pre_order_label_show and item.product.template_suffix contains 'preorder' %}
            <div class="price-label price-label--preorder">{{ 'products.product.preorder' | t }}</div>
          {% endif %}
        </div>

        {%- if item.variant.inventory_management != blank and item.variant.inventory_quantity > 0 and section.settings.show_inventory_notice != 'never' -%}
          {%- if section.settings.show_inventory_notice == 'always' or item.variant.inventory_quantity <= section.settings.inventory_threshold -%}
            {%- liquid
              assign show_inventory_count = false
              if section.settings.show_inventory_count == 'always'
                assign show_inventory_count = true
              endif
              if section.settings.show_inventory_count == 'low' and item.variant.inventory_quantity <= section.settings.inventory_threshold
                assign show_inventory_count = true
              endif

              if show_inventory_count
                if item.variant.inventory_quantity <= section.settings.inventory_threshold
                  assign notice = 'products.labels.only_x_left' | t: quantity: item.variant.inventory_quantity
                else
                  assign notice = 'products.labels.x_units_available' | t: quantity: item.variant.inventory_quantity
                endif
              else
                if item.variant.inventory_quantity <= section.settings.inventory_threshold
                  assign notice = 'products.labels.low_stock' | t
                else
                  assign notice = 'products.labels.in_stock' | t
                endif
              endif
            -%}
            <div class="very-lightly-spaced-row">
              <div class="product-info-block product-inventory-notice product-inventory-notice--small product-inventory-notice--{% if item.variant.inventory_quantity <= section.settings.inventory_threshold %}low{% else %}ok{% endif %}">
                {{- notice -}}
              </div>
            </div>
          {%- endif -%}
        {%- endif -%}
      </div>
    </div>

    
    
    {% if wpddrawer == true %}
      <input type="hidden" data-wpd-cart-drawer-product-handle="{{ item.product.handle }}" 
        data-wpd-cart-drawer-variant-id="{{ item.variant.id }}"
        data-wpd-cart-drawer-variant-price="{{ item.variant.price }}" 
        data-wpd-cart-drawer-variant-compare-at-price="{{ item.variant.compare_at_price }}" 
        data-wpd-cart-drawer-product-collection-ids="
        {{ wpdProductCollectionIds | join:',' }}" 
        data-wpd-cart-drawer-product-id="{{ item.product.id }}" 
        data-wpd-cart-drawer-line-price 
        data-wpd-cart-drawer-item="{{ item.key }}" 
        data-wpd-cart-drawer-quantity="{{ item.quantity }}" />
    {% endif %}

    <div class="cart-item__column cart-item__price">
      <span 
        {% if wpddrawer == true %}
          data-wpd-cart-drawer-product-handle="{{ item.product.handle }}" 
          data-wpd-cart-drawer-variant-id="{{ item.variant.id }}" 
          data-wpd-cart-drawer-variant-price="{{ item.variant.price }}" 
          data-wpd-cart-drawer-variant-compare-at-price="{{ item.variant.compare_at_price }}" 
          data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = item.product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}" 
          data-wpd-cart-drawer-product-id="{{ item.product.id }}" 
          data-wpd-cart-drawer-item="{{ item.key }}" 
          data-wpd-cart-drawer-quantity="{{ item.quantity }}"
        {% else %}
          data-wpd-cart-variant-id="{{ item.variant.id }}" data-wpd-cart-item="{{ item.key }}"
        {% endif %}
        class="theme-money cart-item__selling-price">{{ item.final_price | money_with_currency }}</span>
      {% if item.variant.compare_at_price > item.variant.price %}
        <span class="data-wpd-hide struck-out-price small-text"><span class="theme-money">{{ item.variant.compare_at_price | money }}</span></span>
      {% elsif item.original_line_price > item.final_line_price %}
        <span 
          {% if wpddrawer == true %}
            data-wpd-cart-drawer-product-handle="{{ item.product.handle }}" 
            data-wpd-cart-drawer-variant-id="{{ item.variant.id }}" 
            data-wpd-cart-drawer-variant-price="{{ item.variant.price }}" 
            data-wpd-cart-drawer-variant-compare-at-price="{{ item.variant.compare_at_price }}" 
            data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = item.product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}" 
            data-wpd-cart-drawer-product-id="{{ item.product.id }}" 
            data-wpd-cart-drawer-item="{{ item.key }}" 
            data-wpd-cart-drawer-quantity="{{ item.quantity }}"
          {% else %}
            data-wpd-cart-variant-id="{{ item.variant.id }}" data-wpd-cart-item="{{ item.key }}"
          {% endif %}
          class="struck-out-price small-text"><span class="theme-money">{{ item.original_price | money }}</span></span>
      {% endif %}

      {% render 'unit-price', variant: item %}

      {%- unless drawer -%}
        {{- line_item_discounts -}}
      {%- endunless -%}
    </div>
    <div class="line-item-cart">
      {% for line_item in cart.items %} 
          {% if line_item.properties['_sub'] %}
            {% if line_item.properties['_randomNumber'] == item.properties['_randomNumber'] %}
              <div class="upsell-item" {% if line_item.properties['_randomNumber'] %}data-free-item="{{ line_item.properties['_randomNumber'] }}"{% endif %} data-line-item="{{ forloop.index }}" data-key="{{ line_item.key }}">
                <div class="line-item-cart-img">
                  {% render 'responsive-image', image: line_item.image, max_height: 100 %}
                </div>
                <div class="line-item-cart-text">
                  <span class="line-item-cart-title">
                    {{ line_item.title }} - <u>Added</u> - 
                  </span>
                  <span class="line-item-cart-quantity">  
                    {{ line_item.quantity }}  x
                  </span>
                  <span class="line-item-cart-final-price">
                    {{ line_item.price | money_with_currency }}
                  </span>
                  <span class="bulb-total-price">
                    {% assign total_price = line_item.quantity | times: line_item.price %}
                    <span>(Total = {{ total_price | money_with_currency }})</span>
                  </span>
                </div>
              </div>
            {% endif %}
          {% endif %}
      {% endfor %}
     </div>  


    {% if item.variant.inventory_management != blank and item.variant.inventory_policy == 'deny' and item.variant.inventory_quantity <= item.quantity %}
      {% assign can_increase = false %}
    {% else %}
      {% assign can_increase = true %}
    {% endif %}
    <div class="cart-item__column cart-item__quantity cart-item__quantity_wrapper">
      <div class="quantity buttoned-input {% if item.properties['_randomNumber'] %} hidden {% endif %}">
        <a id="updates_dec_{{ forloop.index }}" class="notabutton quantity-down" href="{{ routes.cart_change_url }}?id={{ item.key }}&quantity={{ item.quantity | minus: 1 }}" aria-label="{{ 'cart.label.decrease' | t | escape }}">{% render 'svg-minus' %}</a>
        <input
          class="cart-item__quantity-input"
          type="number"
          size="2"
          id="updates_{{ forloop.index }}"
          name="updates[]"
          data-initial-value="{{ item.quantity }}"
          data-line="{{ forloop.index }}"
          {% if item.variant.inventory_management != blank and item.variant.inventory_policy == 'deny' %}
            max="{{ item.variant.inventory_quantity }}"
            value="{{ item.quantity | at_most: item.variant.inventory_quantity }}"
          {% else %}
            value="{{ item.quantity }}"
          {% endif %}
          aria-label="{{ 'cart.general.quantity' | t | escape }}" />
        <a id="updates_inc_{{ forloop.index }}" class="notabutton quantity-up {% unless can_increase %}unusable{% endunless %}" href="{{ routes.cart_change_url }}?id={{ item.key }}&quantity={{ item.quantity | plus: 1 }}" aria-label="{{ 'cart.label.increase' | t | escape }}">{% render 'svg-plus' %}</a>
      </div>
      <a class="remove-link {% unless item.properties['_randomNumber'] %}cart-item__remove{% endunless %} small-text underline" href="{{ routes.cart_change_url }}?id={{ item.key }}&quantity=0" 
        {% if item.properties['_randomNumber'] %}data-remove-bundle="{{ item.properties['_randomNumber'] }}"{% endif %}
        data-line-item="{{ forloop.index }}" data-key="{{ item.key }}">
        {{- 'cart.general.remove' | t -}}
      </a>
    </div>

    {%- unless drawer -%}
      <div class="cart-item__column cart-item__total" data-line="{{ forloop.index }}">
        <span 
          {% if wpddrawer == true %}
            data-wpd-cart-drawer-product-handle="{{ item.product.handle }}" data-wpd-cart-drawer-variant-id="{{ item.variant.id }}" data-wpd-cart-drawer-variant-price="{{ item.variant.price }}" data-wpd-cart-drawer-variant-compare-at-price="{{ item.variant.compare_at_price }}" data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = item.product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}" data-wpd-cart-drawer-product-id="{{ item.product.id }}" data-wpd-cart-drawer-line-price data-wpd-cart-drawer-item="{{ item.key }}" data-wpd-cart-drawer-quantity="{{ item.quantity }}"
          {% else %}
            data-wpd-cart-variant-id="{{ item.variant.id }}" data-wpd-cart-item="{{ item.key }}" data-wpd-cart-line-price
          {% endif %}
          class="theme-money cart-item__selling-total">{{ item.final_line_price | money }}</span>
        {% if item.variant.compare_at_price > item.variant.price %}
          <div class="data-wpd-hide theme-money struck-out-price small-text">{{ item.variant.compare_at_price | times: item.quantity | money }}</div>
        {% elsif item.original_line_price != item.final_line_price %}
          <div 
            {% if wpddrawer == true %}
              data-wpd-cart-drawer-product-handle="{{ item.product.handle }}" data-wpd-cart-drawer-variant-id="{{ item.variant.id }}" data-wpd-cart-drawer-variant-price="{{ item.variant.price }}" data-wpd-cart-drawer-variant-compare-at-price="{{ item.variant.compare_at_price }}" data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = item.product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}" data-wpd-cart-drawer-product-id="{{ item.product.id }}" data-wpd-cart-drawer-line-price data-wpd-cart-drawer-item="{{ item.key }}" data-wpd-cart-drawer-quantity="{{ item.quantity }}"
            {% else %}
              data-wpd-cart-variant-id="{{ item.variant.id }}" data-wpd-cart-item="{{ item.key }}" data-wpd-cart-line-price
            {% endif %}
            class="theme-money struck-out-price small-text">{{ item.original_line_price | money }}</div>
        {% endif %}
      </div>
    {%- endunless -%}

    {% if item.line_level_discount_allocations.size > 0 %}
      <div class="cart-item__item-discounts">
        <ul class="cart-discount-list">
        {% for discount_allocation in item.line_level_discount_allocations %}
          <li class="cart-discount cart-discount--inline">
            <span class="cart-discount__label">
                <span class="cart-discount__icon">{% render 'icon-label' %}</span>
                <span class="cart-discount__title">{{ discount_allocation.discount_application.title | escape_once }}</span>
            </span>
            <span class="cart-discount__amount theme-money">{{ discount_allocation.amount | money }}</span>
          </li>
        {% endfor %}
        </ul>
      </div>
    {% endif %}

  </div>
</div>