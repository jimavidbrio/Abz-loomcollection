{% assign short_id = block.id | slice: -3, 3 %}

<style>

  
{% if block.settings.override_fonts %}
    {{ block.settings.text_font | font_face }}
    {{ block.settings.headline_font | font_face }}
{% endif %}

#sp-b-{{ block.id }} p {
    font-size: {{ block.settings.text_size }}px;
    {% if block.settings.override_fonts %}
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    {% endif %}
    {% if block.settings.text_line_height != 'inherit' %}line-height: {{ block.settings.text_line_height }};{% endif %}
    margin: 0 0 {{ block.settings.element_spacing }}px 0;
    padding: 0;
    color: {{ block.settings.text_color }};
}

#sp-b-{{ block.id }} ul, #sp-b-{{ block.id }} ol {
    margin: 0 0 {{ block.settings.element_spacing }}px 0;
}

#sp-b-{{ block.id }} li {
    font-size: {{ block.settings.text_size }}px;
    {% if block.settings.override_fonts %}
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    {% endif %}
    {% if block.settings.text_line_height != 'inherit' %}line-height: {{ block.settings.text_line_height }};{% endif %}
    margin: 0 0 5px 0;
    padding: 0;
    color: {{ block.settings.text_color }};
}

#sp-b-{{ block.id }} li:last-child {
    margin: 0;
}

#sp-b-{{ block.id }} p a,
#sp-b-{{ block.id }} p a:visited
#sp-b-{{ block.id }} li a,
#sp-b-{{ block.id }} li a:visited {
    color: {{ block.settings.link_color }};
}

@media (max-width: 800px) {
    #sp-b-{{ block.id }} p,
    #sp-b-{{ block.id }} li {
        font-size: {{ block.settings.mobile_text_size }}px;
    }
}

#sp-b-{{ block.id }} h1,
#sp-b-{{ block.id }} h2,
#sp-b-{{ block.id }} h3,
#sp-b-{{ block.id }} h4,
#sp-b-{{ block.id }} h5 {
    font-size: {{ block.settings.headline_size }}px;
    {% if block.settings.override_fonts %}
    font-family: {{ block.settings.headline_font.family }}, {{ block.settings.headline_font.fallback_families }};
    font-weight: {{ block.settings.headline_font.weight }};
    {% endif %}
    {% if block.settings.headline_line_height != 'inherit' %}line-height: {{ block.settings.headline_line_height }};{% endif %}
    margin: 0 0 {{ block.settings.element_spacing }}px 0;
    padding: 0;
    color: {{ block.settings.text_color }};
}

@media (max-width: 800px) {
    #sp-b-{{ block.id }} h1,
    #sp-b-{{ block.id }} h2,
    #sp-b-{{ block.id }} h3,
    #sp-b-{{ block.id }} h4,
    #sp-b-{{ block.id }} h5 {
    font-size: {{ block.settings.mobile_headline_size }}px;
    }
}

#sp-b-{{ block.id }} h2 {
    font-size: {{ block.settings.headline_size | minus:5  | at_least:13 }}px;
}

#sp-b-{{ block.id }} h3 {
    font-size: {{ block.settings.headline_size | minus:10 | at_least:13 }}px;
}

#sp-b-{{ block.id }} h4 {
    font-size: {{ block.settings.headline_size | minus:15 | at_least:13 }}px;
}

#sp-b-{{ block.id }} h5 {
    font-size: {{ block.settings.headline_size | minus:20 | at_least:13 }}px;
}

@media (max-width: 800px) {
    #sp-b-{{ block.id }} h2 {
    font-size: {{ block.settings.mobile_headline_size | minus:5 | at_least:13 }}px;
    }

    #sp-b-{{ block.id }} h3 {
    font-size: {{ block.settings.mobile_headline_size | minus:10 | at_least:13 }}px;
    }

    #sp-b-{{ block.id }} h4 {
    font-size: {{ block.settings.mobile_headline_size | minus:15 | at_least:13 }}px;
    }

    #sp-b-{{ block.id }} h5 {
    font-size: {{ block.settings.mobile_headline_size | minus:20 | at_least:13 }}px;
    }
}

  

  {%- capture sp_content -%} 

  #sp-b-{{ block.id }} {
      position: relative;
      {% if block.settings.block_background_color %}background-image: {{ block.settings.block_background_color }};{% endif %}
      width: 100%;
      box-sizing: border-box;
      padding: {{ block.settings.block_padding_top_bottom }}px {{ block.settings.block_padding_left_right }}px;
      overflow: hidden;
      margin: 0 0 {{ block.settings.block_spacing }}px 0;
  }

  @media (max-width: 800px) {
      #sp-b-{{ block.id }} {
        padding: {{ block.settings.mobile_block_padding_top_bottom }}px {{ block.settings.mobile_block_padding_left_right }}px;
        margin: 0 0 {{ block.settings.block_spacing }}px 0;
      }
  }

  {% if block.settings.show_on_device == 'mobile' %}
    @media (min-width: 801px) {
        #sp-b-{{ block.id }} {
            display: none;
        }
    }
  {% endif %}

  {% if block.settings.show_on_device == 'desktop' %}
    @media (max-width: 800px) {
        #sp-b-{{ block.id }} {
            display: none;
        }
    }
  {% endif %}

  #sp-b-{{ block.id }} .sp-b-container {
      position: relative;
      margin: 0 auto;
      {% if block.settings.container_background_color %}background-image: {{ block.settings.container_background_color }};{% endif %}
      border-radius: {{ block.settings.container_radius }}px;
      {% if block.settings.container_shadow %}box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);{% endif %}
      border: {{ block.settings.container_border_size }}px solid {{ block.settings.container_border_color }};
      max-width: {{ block.settings.container_max_width }}px;
      padding: {{ block.settings.container_padding_top_bottom }}px {{ block.settings.container_padding_left_right }}px;
      overflow: hidden;
  }

  @media (max-width: 800px) {
      #sp-b-{{ block.id }} .sp-b-container {
      padding: {{ block.settings.mobile_container_padding_top_bottom }}px {{ block.settings.mobile_container_padding_left_right }}px;
      }
  }

  
  #sp-b-{{ block.id }} .sp-b-container summary {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: 10px;
}

#sp-b-{{ block.id }} .sp-b-container summary.sp-b-has-icon {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: 10px;
}

#sp-b-{{ block.id }} .sp-b-container summary::after {
    transform: translateY(5px);
    text-align: right;
    content: url('data:image/svg+xml; utf8, <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none"/><path fill="%23888888" d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/></svg>');
}

.#sp-b-{{ block.id }} sp-b-container[open] summary::after {
    content: url('data:image/svg+xml; utf8, <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none"/><path fill="%23888888" d="M19 13H5v-2h14v2z"/></svg>');
}

  #sp-b-{{ block.id }} .sp-b-container>summary>img {
      {% if block.settings.icon_shape == 'rounded' %}
        border-radius: 5px;
      {% endif %}
      {% if block.settings.icon_shape == 'circle' %}
        border-radius: 50%;
      {% endif %}
      {% if block.settings.icon_shape == 'square' %}
        border-radius: 0;
      {% endif %}
      background-color: #ccc;
      width: {{ block.settings.icon_size }}px;
      height: {{ block.settings.icon_size }}px;
      margin: 0;
      padding: 0;
      box-shadow: none;
    }

    #sp-b-{{ block.id }} .sp-b-container>div {
      padding-top: {{ block.settings.element_spacing }}px;
    }

    #sp-b-{{ block.id }} .sp-b-container>div>img {
      box-shadow: none;
      border-radius: {{ block.settings.media_radius }}px;
      width: 100%;
      margin-bottom: {{ block.settings.element_spacing }}px;
    }

    @media only screen and (min-width: 801px) {
      #sp-b-{{ block.id }} {
        {{ block.settings.desktop_css }};
      }
    }
  
    @media only screen and (max-width: 800px) {
      #sp-b-{{ block.id }} {
        {{ block.settings.mobile_css }};
      }
    }

    {%- endcapture -%} 

  {%- liquid
    assign chunks = sp_content | strip_newlines | split: ' ' | join: ' ' | split: '*/'
    for chunk in chunks
      assign mini = chunk | split: '/*' | first | strip | replace: ': ', ':' | replace: '; ', ';' | replace: '} ', '}' | replace: '{ ', '{' | replace: ' {', '{' | replace: ';}', '}'
      echo mini
    endfor
  %}
</style>

<div id="sp-b-{{ block.id }}" class="sp-b-block">
  <div class="sp-b-container">
    {{ block.settings.content }}
  </div>
</div>
